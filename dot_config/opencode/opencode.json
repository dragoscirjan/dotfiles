{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "@tarquinen/opencode-dcp@latest"
  ],
  "mcp": {
    "memory_json": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "environment": {
        "MEMORY_FILE_PATH": ".memory.jsonl"
      },
      "enabled": true
    },
    "memory_libsql": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-memory-libsql"
      ],
      "environment": {
        "LIBSQL_URL": "file:.memory.db"
      },
      "enabled": false
    },
    "sequential_thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    }
  }
}
