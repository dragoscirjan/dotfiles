# Dynamic theme colors
config-file = ?"~/.config/omarchy/current/theme/ghostty.conf"

#
# Font
#
font-family = "JetBrainsMono Nerd Font"
# font-style = Regular
# font-size = 9
# font-family = "SauceCodePro Nerd Font"
font-size = 16
background-opacity = 0.9

#
# Cursor styling
#
cursor-style = "block"
cursor-style-blink = false

#
# Cursor styling + SSH session terminfo
# (all shell integration options must be passed together)
#
shell-integration-features = no-cursor,ssh-env

#
# Slowdown mouse scrolling
#
mouse-scroll-multiplier = 0.95

#
# Window
#
window-theme = ghostty
window-padding-x = 14
window-padding-y = 14
confirm-close-surface=false
resize-overlay = never
gtk-toolbar-style = flat

#
# Tab Navigation
#
keybind = super+right=next_tab
keybind = super+left=previous_tab

#
# Tab management
#
# TODO: this is not supported
# keybind = super+shift+r=rename_tab

#
# Shell launchers (new tab with different shells)
#
# keybind = super+shift+z=new_tab:zsh,-l
# keybind = super+shift+f=new_tab:fish,-l
# keybind = super+shift+b=new_tab:bash,-l

#
# Direct tab access (1-9)
#
keybind = super+1=goto_tab:1
keybind = super+2=goto_tab:2
keybind = super+3=goto_tab:3
keybind = super+4=goto_tab:4
keybind = super+5=goto_tab:5
keybind = super+6=goto_tab:6
keybind = super+7=goto_tab:7
keybind = super+8=goto_tab:8
keybind = super+9=goto_tab:9


#
# Keyboard bindings
#

keybind = shift+insert=paste_from_clipboard
keybind = control+insert=copy_to_clipboard

# Split Panel
# TODO: Do not work on Omarchy yet
#
keybind = super+d=new_split:right
keybind = super+shift+d=new_split:down
keybind = super+alt+left=goto_split:left
keybind = super+alt+right=goto_split:right
keybind = super+alt+down=goto_split:bottom
keybind = super+alt+up=goto_split:top

# Resize Split Panels
#
keybind = super+control+shift+alt+arrow_down=resize_split:down,100
keybind = super+control+shift+alt+arrow_up=resize_split:up,100
keybind = super+control+shift+alt+arrow_left=resize_split:left,100
keybind = super+control+shift+alt+arrow_right=resize_split:right,100

